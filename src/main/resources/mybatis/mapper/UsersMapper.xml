<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.example.demo.mapper.UsersMapper">


    <select id="getUsersByUserName" resultType="com.java.example.demo.entity.Users">
        select id, user_name as userName, password, role from  user where  user_name=#{userName}
    </select>

</mapper>